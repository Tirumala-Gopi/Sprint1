package LibrarySystem;

public class Runner {

	public static void main(String[] args) {
		
		Book book1=new Book("Java Basics","Alice",300,true);
		Book book2=new Book("Python Guided","Bob",250,true);
		
		Member member1=new Member("Jhon",101,0);
		Member member2=new Member("Emma",102,1);
		
		Library library1=new Library("Cioty Library","Mian st",500);
		
		System.out.println(book1.getInfo());
		System.out.println(book2.getInfo());
		System.out.println(member1.getInfo());
		System.out.println(member2.getInfo());
		System.out.println(library1.getInfo());
		
		member1.setBorrowedBooks(1);
		System.out.println(member1.getInfo());
		
		book1.setAvailable(false);
		System.out.println(book1.getInfo());
		
		member2.setBorrowedBooks(0);
		System.out.println(member2.getInfo());
		
		library1.addBooks(50);
		System.out.println(library1.getInfo());
		
		library1.removeBooks(20);
		System.out.println(library1.getInfo());
		
		book1.setTitle("Advanced Java");
		System.out.println(book1.getTitle());
		
		System.out.println(member1.getBorrowedBooks()+" && "+member2.getBorrowedBooks());
		
		
		System.out.println(book1.isAvailable()+" && "+book2.isAvailable());
	}

}
