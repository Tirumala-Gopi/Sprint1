package manage_Students_and_Course_Enrollments;

import java.util.List;

public class Student {
	private int studentId;
	private String name;
	private int age;
	private List<Course>courses;
	public int getStudentId() {
		return studentId;
	}
	public void setStudentId(int studentId) {
		this.studentId = studentId;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public List<Course> getCourses() {
		return courses;
	}
	public void setCourses(List<Course> courses) {
		this.courses = courses;
	}
	public Student(int studentId, String name, int age, List<Course> courses) {
		super();
		this.name = name;
		this.age = age;
		this.courses = courses;
		this.studentId =studentId;
	}
	@Override
	public String toString() {
		return "Stuent [studentId=" + studentId + ", name=" + name + ", age=" + age + "]";
	}
	public Student(String name, int age) {
		super();
		this.name = name;
		this.age = age;
	}
	
	public Student(List<Course> courses) {
		super();
		this.courses = courses;
	}
	public Student(int studentId) {
		super();
		this.studentId = 1000;
		int nextstudentId;
		nextstudentId=studentId+3;
			
	}
	public void enrollCourse(Course course)
	{
		courses.add(course);
	}
	public void dropCourse(Course course)
	{
		courses.remove(course);
	}
	public double getAverageGrade()
	{
		Course.
		
	}
	
	public static boolean isValidage(int age)
	{
		if (age>=16)
			return true;
		else
			return false;
		
	}

}
