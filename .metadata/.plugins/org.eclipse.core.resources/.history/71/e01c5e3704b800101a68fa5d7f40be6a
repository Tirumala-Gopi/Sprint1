package Library_and_Member_ManagementSystem;

import java.util.ArrayList;

public class LibraryController {
	private ArrayList<Member>members;
	private ArrayList<Book>books;
	public LibraryController() {
		super();
		this.members = new ArrayList<>();
		this.books = new ArrayList<>();
	}
	@Override
	public String toString() {
		return "LibraryController [members=" + members + ", books=" + books + "]";
	}
	public ArrayList<Member> getMembers() {
		return members;
	}
	public void setMembers(ArrayList<Member> members) {
		this.members = members;
	}
	public ArrayList<Book> getBooks() {
		return books;
	}
	public void setBooks(ArrayList<Book> books) {
		this.books = books;
	}
	
	public void createMember(String name,String email,String type)
	{
		if(type=="Student")
		{
			Student newStudent=new Student(name,email);
			members.add(newStudent);
		}
		else if(type=="Faculty")
		{
			Faculty newFaculty=new Faculty(name,email);
			members.add(newFaculty);
		}
	}
	
	public void removeMember(Member m)
	{
		members.remove(m);
		for(int i=0;i<members.size();i++)
		{
			if(members.get(i)==m)
			{
				for(int j=0;j<m.getBorrowedBooks().size();j++)
				{
					m.getBorrowedBooks().remove(j);
				}
			}
				
			
		}
	}
	
	public void createBook(String type,String title,String author)
	{
		if (type=="eBook")
		{
			EBook newBook=new EBook()
		}
		
	}
	

}
