package manage_Students_and_Course_Enrollments;

import java.util.ArrayList;
import java.util.List;

public class Student {
	private int studentId;
	static int nextStudentId=1000;
	private String name;
	private int age;
	private ArrayList<Course>courses;
	public int getStudentSId() {
		return studentId;
	}
	public void setStudentId(int studentId) {
		this.studentId = studentId;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public List<Course> getCourses() {
		return courses;
	}
	public void setCourses(ArrayList<Course> courses) {
		this.courses = courses;
	}
	public Student(String name, int age) {
		super();
		this.name = name;
		this.age = age;
	
		this.studentId=nextStudentId;
		nextStudentId=studentId+3;
		this.courses=new ArrayList();
	}
	@Override
	public String toString() {
		return "Stuent [studentId=" + studentId + ", name=" + name + ", age=" + age + "]";
	}
	
	
	
	
	public void enrollCourse(Course course)
	{
		courses.add(course);
	}
	public void dropCourse(Course course)
	{
		courses.remove(course);
	}
	public double getAverageGrade(String courseName)
	{
		 for(int i=0;i<courses.size();i++)
		 {
			Course tempCourse=courses.get(i);
		 }
		
	}
	
	public static boolean isValidage(int age)
	{
		if (age>=16)
			return true;
		else
			return false;
		
	}

}
