package manage_Students_and_Course_Enrollments;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

public class Course {

	
	private int courseId;
	static int nextCourseId=500;
	private String courseName;
	private ArrayList<Double>grades;
	public int getCourseId() {
		return courseId;
	}
	public void setCourseId(int courseId) {
		this.courseId = courseId;
	}
	public String getCourseName() {
		return courseName;
	}
	public void setCourseName(String courseName) {
		this.courseName = courseName;
	}
	public ArrayList<Double> getGrades() {
		return grades;
	}
	public void setGrades(ArrayList<Double> grades) {
		this.grades = grades;
	}
	@Override
	public String toString() {
		return "Course [courseId=" + courseId + ", courseName=" + courseName + ", grades=" + grades + "]";
	}
	
	public Course(String courseName) {
		super();
		this.courseName = courseName;
		this.courseId=nextCourseId;
		nextCourseId=courseId+3;
		this.grades=new ArrayList();
		
	}
	
	
		public void addgrade(double grade)
		{
			grades.add(grade);
			
		}
		public double getHighestGrade()
		{
			double highestGrade=Collections.max(grades);
			return highestGrade;
		}
		public static boolean isValidGarde(double grade)
		{
			boolean result=(grade>0&&grade<100? true:false);
			return result;
		}
	
	
	
	
	
}
