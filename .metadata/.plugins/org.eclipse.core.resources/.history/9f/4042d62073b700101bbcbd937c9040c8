package Account_and_customer_management;

public abstract class Account  {

	
	public Account() {
		super();
	}

	private long ACCOUNT_ID;
	static long nextAccountId=1000;
	protected double balance;
	public long getACCOUNT_ID() {
		return ACCOUNT_ID;
	}
	public void setACCOUNT_ID(long aCCOUNT_ID) {
		ACCOUNT_ID = aCCOUNT_ID;
	}
	public double getBalance() {
		return balance;
	}
	public void setBalance(double balance) {
		this.balance = balance;
	}
	public Account(double balance) {
		super();
		this.ACCOUNT_ID = nextAccountId;
		nextAccountId=ACCOUNT_ID+5;
		this.balance = balance;
	}
	@Override
	public String toString() {
		return "Account [ACCOUNT_ID=" + ACCOUNT_ID + ", balance=" + balance + "]";
	}
	
	public double withdraw(double amount)
	{
		double withdraw=amount;
		if (withdraw<balance)
			{
			balance=balance-withdraw;
			System.out.println(withdraw+" was debited from your account and your current balnace was "+ balance);
			
		return balance;
			}
		return 0.0;
	}
	public void deposit(double amount)
	{
		double deposit=amount;
		if (deposit>0)
			balance=balance+deposit;
		System.out.println(deposit+" was deposited in your account and your current baknce was "+balance);
		
		
	}
	
	public void correctBalance(double amount)
	{
		
		
		System.out.println("correctec balance was"+balance);
		
	}
}
